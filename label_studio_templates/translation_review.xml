<!--
Label Studio Template: Translation Review
Task: Review and correct machine-generated translations from Vietnamese-English code-switched text

Interface:
- Source text (CS Vietnamese-English) display
- Editable translation text area
- Side-by-side comparison view
- Quality assessment options
-->
<View>
  <Header value="Translation Review Task"/>
  
  <!-- Metadata Display -->
  <View style="display: flex; gap: 20px; margin-bottom: 15px; padding: 10px; background: #e8f4f8; border-radius: 8px;">
    <View>
      <Header value="Sample ID" size="5"/>
      <Text name="sample_id_display" value="$sample_id"/>
    </View>
  </View>
  
  <!-- Instructions -->
  <View style="background: #fff3cd; padding: 10px; border-radius: 8px; margin-bottom: 15px;">
    <Header value="Instructions" size="4"/>
    <Text name="instructions" value="Review the translation and correct any errors. Consider:"/>
    <View style="margin-left: 20px;">
      <Text value="• Accuracy of meaning transfer"/>
      <Text value="• Natural Vietnamese phrasing"/>
      <Text value="• Handling of English terms (keep/translate)"/>
      <Text value="• Grammar and punctuation"/>
    </View>
  </View>
  
  <!-- Side-by-side View -->
  <View style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 15px;">
    
    <!-- Source Text (CS Vietnamese-English) -->
    <View style="background: #f5f5f5; padding: 15px; border-radius: 8px;">
      <Header value="Source Text (Code-Switched)" size="4"/>
      <View style="border-left: 4px solid #007bff; padding-left: 10px;">
        <Text name="source_text" value="$source_text"/>
      </View>
    </View>
    
    <!-- Machine Translation (Reference) -->
    <View style="background: #f0f0f0; padding: 15px; border-radius: 8px;">
      <Header value="Machine Translation (Reference)" size="4"/>
      <View style="border-left: 4px solid #6c757d; padding-left: 10px;">
        <Text name="mt_translation" value="$translation"/>
      </View>
    </View>
  </View>
  
  <!-- Corrected Translation Input -->
  <View style="margin-bottom: 15px;">
    <Header value="Corrected Translation (Vietnamese)" size="4"/>
    <TextArea name="corrected_translation" 
              toName="source_text"
              value="$translation"
              rows="4"
              placeholder="Enter corrected Vietnamese translation..."
              maxSubmissions="1"
              editable="true"/>
  </View>
  
  <!-- Translation Quality Assessment -->
  <View style="margin-bottom: 15px;">
    <Header value="Translation Quality Issues" size="4"/>
    <Choices name="translation_issues" toName="source_text" choice="multiple">
      <Choice value="meaning_error" hint="Translation doesn't capture original meaning"/>
      <Choice value="grammar_error" hint="Vietnamese grammar issues"/>
      <Choice value="unnatural_phrasing" hint="Awkward or unnatural Vietnamese"/>
      <Choice value="missing_content" hint="Some content not translated"/>
      <Choice value="over_translation" hint="Added content not in original"/>
      <Choice value="term_handling" hint="English terms handled incorrectly"/>
    </Choices>
  </View>
  
  <!-- Overall Quality Rating -->
  <View style="margin-bottom: 15px;">
    <Header value="Original MT Quality (1-5)" size="4"/>
    <Rating name="mt_quality" toName="source_text" maxRating="5" icon="star" size="medium"/>
  </View>
  
  <!-- Confidence Rating -->
  <View style="margin-bottom: 15px;">
    <Header value="Confidence in Correction" size="4"/>
    <Rating name="confidence" toName="source_text" maxRating="5" icon="star" size="medium"/>
  </View>
  
  <!-- Notes -->
  <View>
    <Header value="Additional Notes (Optional)" size="4"/>
    <TextArea name="notes" 
              toName="source_text"
              rows="2"
              placeholder="Any additional notes about this translation..."/>
  </View>
</View>
